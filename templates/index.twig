{% extends "_layouts/_layout" %}

{% block _inline_css %}
    <style>
        {{ source ('index_critical.min.css', ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}
    
    <section>
        <div>
            {% set showImage = showInfo.showImage.one() %}
            <picture>
                <source srcset="{{ showImage.optimizedImages.srcsetWebP() }}"
                        sizes="100vw"
                        type="image/webp" />
                <img src="{{ showImage.optimizedImages.src() }}"
                     srcset="{{ showImage.optimizedImages.srcset() }}"
                     sizes="100vw" />
            </picture>
        </div>
    </section>

{% endblock %}

{% block _inline_js %}
{% endblock %}
