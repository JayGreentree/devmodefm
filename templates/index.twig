{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout" %}

{% block _inline_css %}
    <style>
        {{ source ('index_critical.min.css', ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}
    
    <section>
        <div>
            {% for episode in craft.entries.section('episodes').all() %}
                <div class="flex flex-wrap">
                    {% include 'episodes/_partials/_display_episode' with {
                        'episode': episode,
                        'showInfo': showInfo,
                    } only %}
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}

{% block _inline_js %}
{% endblock %}
