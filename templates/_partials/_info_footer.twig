{# @var craft \craft\web\twig\variables\CraftVariable #}
{% set backgroundUrl = "#{baseUrl}img/site/devmode-fm-dark-bg.svg" %}
{% from "_partials/_macros.twig" import displayCodeLines %}
{% spaceless %}
    {% set hosts = craft.users.group("owners").all() %}
{% endspaceless %}
<footer>
    <div class="lazyload bg-repeat header-background relative" data-bgset="{{ backgroundUrl }} 600w" data-sizes="auto" style="min-height: 18rem;">
        <div class="w-full md:w-auto bg-devmode-yellow text-devmode-pink inline-block py-4 px-8 absolute pin-b pin-l">
            <div class="inline text-devmode-pink font-mono italic text-sm align-middle">
                // Copyright &copy;{{ now |date("Y") }} {% for host in hosts %}{{ host.fullName }}{% if not loop.last %}, {% endif %}{% endfor %}
                <br />
                // Site by<a class="navbar-link font-mono text-sm" href="https://nystudio107.com/" target="_blank" rel="noopener">nystudio107.com</a>designed by<a class="navbar-link font-mono text-sm" href="https://codemdd.io/" target="_blank" rel="noopener">codemdd.io</a></span>
                <br />
                <br />
                {% verbatim %}
                    <span class="whitespace-no-wrap roman">{{ footer.privacyPolicy }}</span> <span class="whitespace-no-wrap roman">{{ footer.termsOfService }}</span>
                {% endverbatim %}
            </div>
        </div>
    </div>
</footer>
