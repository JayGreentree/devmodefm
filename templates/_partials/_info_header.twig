<header>
    <div class="flex flex-wrap items-center justify-center mb-8">
        <div class="w-full md:w-5/6">
            <div class="w-full md:w-auto bg-devmode-yellow text-devmode-pink inline-block p-4">
                <span class="font-mono italic text-bold text-4xl align-middle ">
                    <a href="/" class="title-link" @mouseover="prerenderLink">{{ showInfo.showTitle }}</a>
                </span>
                <span class="hidden md:inline text-devmode-pink font-mono italic text-md align-middle pl-4">
                    {{ showInfo.showSubTitle }}
                </span>
                    <div class="inline-block md:hidden bg-devmode-yellow text-devmode-pink inline-block p-4">
                        <span class="font-mono italic text-bold text-4xl align-middle ">
                            <i class="icon-menu"></i>
                        </span>
                    </div>
            </div>
        </div>
        <div class="hidden md:block w-full md:w-1/6 text-right">
            <div class="inline-block bg-devmode-yellow text-devmode-pink inline-block p-4">
                <span class="font-mono italic text-bold text-4xl align-middle ">
                    <i class="icon-menu"></i>
                </span>
            </div>
        </div>
    </div>
