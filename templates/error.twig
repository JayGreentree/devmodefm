{# @var craft \craft\web\twig\variables\CraftVariable #}
{% set entry = craft.entries.section("genericError").limit(1).one() %}

{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
    <style>
        {{ source ("error_critical.min.css", ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}
{% endblock %}

{% block subcontent %}
    <section>
        <div class="bg-grey-whitest">
            <div class="container mx-auto py-8">
                <div class="text-center p-8 mb-8">
                    <h1 class="text-devmode-pink font-mono italic text-bold text-5xl pt-4">
                        {{ entry.errorHeadline }}
                    </h1>
                    <div class="inline-block">
                        <p class="text-black font-mono text-left text-xl pt-4">
                            {{ entry.errorText |nl2br }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    {% include "episodes/_partials/_display_recent_episodes.twig" with {
        "showInfo": showInfo,
    } only %}
{% endblock %}

{% block _inline_js %}
{% endblock %}
