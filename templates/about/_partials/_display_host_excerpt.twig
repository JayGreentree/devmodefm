{# @var craft \craft\web\twig\variables\CraftVariable #}
<div class="w-full mb-8">
    <div class="w-full bg-grey-lightest">
        <div class="p-8">
            {# -- Host picture -- #}
            {% set hostPhoto = host.getPhoto() %}
            {% if hostPhoto |length %}
                <div class="text-left">
                    <figure class="inline-block">
                        <div class="circle-image-wrapper">
                            <div class="circle-image-cropper">
                                <picture>
                                    <source data-srcset="{{ hostPhoto.profileOptimizedImages.srcsetWebP() }}"
                                            data-sizes="100px"
                                            type="image/webp" />
                                    <img class="circle-image lazyload"
                                         src="{{ hostPhoto.profileOptimizedImages.placeholderSilhouette() }}"
                                         data-srcset="{{ hostPhoto.profileOptimizedImages.srcset() }}"
                                         data-sizes="100px" />
                                </picture>
                            </div>
                        </div>
                    </figure>
                </div>
            {% endif %}
            <div class="flex flex-wrap items-center justify-center flex-row-reverse md:flex-row flex-col-reverse">
                {# -- Host name -- #}
                <div class=" w-full md:w-2/3 font-mono italic font-bold text-devmode-pink text-left text-3xl py-2">
                    {{ host.fullName |typogrify }}
                </div>
                {# -- Host info -- #}
                <div class="w-full md:w-1/3 text-devmode-pink font-mono text-xs text-left md:text-right uppercase py-2">
                    <a href="{{ host.profileUrl }}" class="title-link" target="_blank">
                        {{ host.profileCompany |typogrify }}
                    </a>
                </div>
            </div>
            {# -- Host bio -- #}
            <div class="text-devmode-pink font-sans text-xl py-2 leading-normal">
                {{ host.profileBio |truncateOnWord(400) |typogrify }}
            </div>
            {# -- Host tags -- #}
            <div class="text-devmode-pink font-sans text-xl py-2">
                <div class="inline">
                    {% if host.profileTwitterUrl |length %}
                        <span class="font-mono italic font-bold text-xs bg-devmode-yellow text-devmode-pink">
                            <a class="tags-link align-middle whitespace-no-wrap" href="{{ host.profileTwitterUrl }}" target="_blank" rel="noindex,nofollow"><i class="icon-github-circled"></i> Twitter</a>
                        </span>
                        <span> </span>
                    {% endif %}
                </div>
                <div class="inline">
                    {% if host.profileGithubUrl |length %}
                        <span class="font-mono italic font-bold text-xs bg-devmode-yellow text-devmode-pink">
                            <a class="tags-link align-middle whitespace-no-wrap" href="{{ host.profileGithubUrl }}" target="_blank" rel="noindex,nofollow"><i class="icon-github-circled"></i> GitHub</a>
                        </span>
                        <span> </span>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
