{# @var craft \craft\web\twig\variables\CraftVariable #}
<div class="w-full mb-8 max-w-lg mx-auto">
    <div class="w-full bg-grey-lightest">
        <div class="p-8">
            <div class="flex flex-wrap items-center justify-center flex-row-reverse md:flex-row flex-col-reverse">
                {# -- Episode title -- #}
                <div class=" w-full md:w-2/3 font-mono italic font-bold text-devmode-pink text-left text-3xl py-2">
                    <a href="{{ episode.url }}" class="title-link" @mouseover="prerenderLink">
                        {{ episode.title |typogrify }}
                    </a>
                </div>
                {# -- Episode number and date -- #}
                <div class="w-full md:w-1/3 text-devmode-pink font-mono text-xs text-left md:text-right uppercase py-2">
                    {{ "Episode " ~ episode.episodeNumber }} / {{ episode.postDate |date("Y.m.d") }}
                </div>
            </div>
            {# -- Episode summary -- #}
            <div class="text-devmode-pink font-sans text-xl py-2 leading-normal">
                {{ episode.episodeSummary |truncateOnWord(400) |typogrify }}
            </div>
            {# -- Episode tags -- #}
            <div class="text-grey-dark py-2">
                {% for tag in episode.episodeTags.all() %}
                    <span class="font-mono italic font-bold text-xs bg-devmode-yellow text-devmode-pink px-2 py-1 m-1">
                        #{{ tag.title }}
                    </span>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
