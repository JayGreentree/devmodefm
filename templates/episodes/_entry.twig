{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout" %}

{% block _inline_css %}
    <style>
        {{ source ('_entry_critical.min.css', ignore_missing = true) }}
    </style>
{% endblock %}

{% block content %}
    
    <section>
        <div>
            <div class="flex flex-wrap">
                {% include 'episodes/_partials/_display_episode' with {
                    'episode': entry,
                    'showInfo': showInfo,
                } only %}
            </div>
        </div>
        {% if not craft.app.request.isLivePreview and entry.status == "live" %}
            {{ disqusEmbed(entry.slug, entry.title, entry.url) }}
        {% endif %}
    </section>

{% endblock %}

{% block _inline_js %}
{% endblock %}
