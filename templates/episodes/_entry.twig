{# @var craft \craft\web\twig\variables\CraftVariable #}
{% extends "_layouts/_layout.twig" %}

{% block _inline_css %}
    <style>
        {{ source ("episodes/_entry_critical.min.css", ignore_missing = true) }}
    </style>
{% endblock %}

{% do seomaticGlobals.setSeoDescription(entry.episodeSummary) %}

{% block content %}
    
    <section>
        <div>
            <div class="flex flex-wrap">
                {% include "episodes/_partials/_display_episode.twig" with {
                    "episode": entry,
                    "showInfo": showInfo,
                } only %}
            </div>
        </div>
    </section>

{% endblock %}

{% block subcontent %}
    <section>
        <div class="bg-grey-whitest">
            <div class="container mx-auto py-8">
        {% if not craft.app.request.isLivePreview and entry.status == "live" %}
            {{ disqusEmbed(entry.slug, entry.title, entry.url) }}
        {% endif %}
            </div>
        </div>
    </section>

    <section>
        <div class="bg-devmode-aqua">
            <div class="pt-8">
                <div class="w-full bg-transparent">
                    <div class="pt-8 mb-8">
                        <h3 class="text-white text-center">
                            Recent Episodes
                        </h3>
                    </div>
                </div>
            </div>
            {% for episode in craft.entries.section("episodes").limit(5).all() %}
                <div class="container mx-auto py-8">
                    <div class="flex flex-wrap">
                        {% include "episodes/_partials/_display_episode_excerpt.twig" with {
                            "episode": episode,
                            "showInfo": showInfo,
                        } only %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block _inline_js %}
{% endblock %}
